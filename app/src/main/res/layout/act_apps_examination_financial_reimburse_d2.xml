<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/snow"
              android:orientation="vertical">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar_common_itt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_topbar_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/approval_person"/>

                    <TextView
                        android:id="@+id/tv_ApprovalPerson"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/approval_dept"/>

                    <TextView
                        android:id="@+id/tv_approvaldept"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/approval_co"/>

                    <TextView
                        android:id="@+id/tv_approvalCo"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/approval_approvalTime"/>

                    <TextView
                        android:id="@+id/tv_approvalTime"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/common_bg_examination_line"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="15dp"
                    android:background="@color/common_bg_examination_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_reimburse_fee1"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_feeOne"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_reimburse_useage1"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_useageOne"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_reimburse_fee2"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_feeTwo"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_reimburse_useage2"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_useageTwo"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_reimburse_fee3"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_feeThree"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_reimburse_useage3"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_useageThree"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_fee_totle"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_totle"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.25"
                        android:text="@string/picture"
                        android:textColor="@color/cl_text_common"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center">

                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/img_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center">

                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/img_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center">

                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/img_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:text="@string/remark_all_apl"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:id="@+id/tv_remark"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:ellipsize="end"
                        android:gravity="top|left"
                        android:lines="3"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height40"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.28"
                        android:gravity="center_vertical"
                        android:text="@string/financial_reimburse_files"
                        android:textColor="@color/cl_text_common"/>

                    <TextView
                        android:id="@+id/tv_files"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.72"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/laytout_decide"
            layout="@layout/bottombar_common_decide"
            android:visibility="gone"/>

        <include
            android:id="@+id/laytout_copy"
            layout="@layout/bottombar_common_copyto"/>
    </RelativeLayout>
</LinearLayout>